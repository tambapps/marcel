<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Shell"
        app:icon="@drawable/shell"
        >
        <SwitchPreference
            android:key="@string/init_script_key"
            app:title="Modify Shell init script"
            android:summary="Modify the script that will be ran at the beginning of every shell session"
            app:persistent="false"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Android permissions"
        >
        <SwitchPreference
            android:key="@string/files_permission_key"
            app:title="Manage files"
            android:summary="Allows to use File APIs and read/write files when requested"
            app:persistent="false"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Dumbbell"
        android:icon="@drawable/dumbbell"
        >
        <Preference
            android:key="@string/clear_dumbbells_preference_key"
            app:title="Remove all dumbbells"
            android:summary="Remove all fetched dumbbells"
            app:persistent="false"
            />

    </PreferenceCategory>

</PreferenceScreen>