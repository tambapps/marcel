import static org.junit.jupiter.api.Assertions.assertEquals

int i1 = 1
private int i2 = 1

assertEquals(1, i1++)
assertEquals(2, i1)
assertEquals(3, ++i1)

assertEquals(3, i1--)
assertEquals(2, i1)
assertEquals(1, --i1)

assertEquals(1, i2++)
assertEquals(2, i2)
assertEquals(3, ++i2)

assertEquals(3, i2--)
assertEquals(2, i2)
assertEquals(1, --i2)

long l1 = 1l
private long l2 = 1l

assertEquals(1l, l1++)
assertEquals(2l, l1)
assertEquals(3l, ++l1)

assertEquals(3l, l1--)
assertEquals(2l, l1)
assertEquals(1l, --l1)

assertEquals(1l, l2++)
assertEquals(2l, l2)
assertEquals(3l, ++l2)

assertEquals(3l, l2--)
assertEquals(2l, l2)
assertEquals(1l, --l2)
