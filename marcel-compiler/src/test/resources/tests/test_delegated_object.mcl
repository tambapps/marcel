import static org.junit.jupiter.api.Assertions.assertTrue
import static org.junit.jupiter.api.Assertions.assertFalse

class MyDelegatedObject implements DelegatedObject<Integer> {
  Integer i // TODO make that if variable name is delegate and class extends DelegatedObject<VariableType>,
            //   the getter is automatically generated if not already present

  fun bool foo() {
    return intValue() == 0
  }

  fun bool bar(int dummy) {
    return intValue() == dummy
  }

  fun Integer getDelegate() {
    return i
  }
}


MyDelegatedObject o = new MyDelegatedObject(i: 0)
MyDelegatedObject o2 = new MyDelegatedObject(i: 1)

assertTrue(o.foo())
assertFalse(o2.foo())

assertTrue(o.bar(dummy: 0))
assertFalse(o2.bar(dummy: 0))