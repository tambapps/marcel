import static org.junit.jupiter.api.Assertions.assertTrue
import static org.junit.jupiter.api.Assertions.assertFalse

class MyDelegatedObject implements DelegatedObject<Integer> {
  // TODO add delegate annotation to avoid having to write 'implements DelegatedObject'
  // delegate getter is automatically generated
  Integer delegate

  fun bool foo() {
    return intValue() == 0
  }

  fun bool bar(int dummy) {
    return intValue() == dummy
  }
}


MyDelegatedObject o = new MyDelegatedObject(delegate: 0)
MyDelegatedObject o2 = new MyDelegatedObject(delegate: 1)

assertTrue(o.foo())
assertFalse(o2.foo())

assertTrue(o.bar(dummy: 0))
assertFalse(o2.bar(dummy: 0))